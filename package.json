{
  "name": "locust",
  "version": "1.0.0",
  "description": "Distributed serverless web crawling/web scraping with support for js execution, proxying, and autoscaling",
  "main": "lib/index.js",
  "directories": {
    "example": "example",
    "lib": "lib"
  },
  "scripts": {
    "coverage": "nyc --reporter=text --reporter=lcov npm test",
    "lint": "eslint --fix ./lib",
    "test": "mocha --exit --grep @remote --invert --timeout 10000 './lib/*.spec.js'",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Ani Channarasappa",
  "license": "MIT",
  "devDependencies": {
    "@hapi/hapi": "^18.3.1",
    "@hapi/vision": "^5.5.2",
    "chai": "^4.2.0",
    "docker-names": "^1.1.1",
    "eslint": "^6.0.1",
    "handlebars": "^4.1.2",
    "husky": "^2.7.0",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.2.3"
  },
  "dependencies": {
    "@achannarasappa/eslint-config": "^1.0.2",
    "ioredis": "^4.3.0",
    "joi": "^14.3.1",
    "puppeteer": "^1.18.1",
    "ramda": "^0.26.1"
  },
  "eslintConfig": {
    "extends": "@achannarasappa/eslint-config",
    "env": {
      "mocha": true,
      "node": true
    },
    "rules": {
      "consistent-return": "off"
    }
  },
  "nyc": {
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "all": true,
    "check-coverage": true,
    "skip-full": true,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "lib/**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
